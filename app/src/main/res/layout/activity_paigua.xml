<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:windowSoftInputMode="stateHidden">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBoxGenderMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textAppearance="?android:textAppearanceSmall" />

        <CheckBox
            android:id="@+id/checkBoxGenderFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:id="@+id/txtViewBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:text="生年:0000"
            android:textAppearance="?android:textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textPersonName"
            android:textAppearance="?android:textAppearanceSmall" />


        <EditText
            android:id="@+id/editTextThings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="2"
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:id="@+id/txtViewYearMonthDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000年00月00日"
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:id="@+id/txtViewHourMinute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00时00分"
            android:textAppearance="?android:textAppearanceSmall" />


        <LinearLayout
            android:id="@+id/LinearLayoutGuaYao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtView6Yao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="上 爻"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/txtView5Yao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:text="五 爻"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/txtView4Yao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:text="四 爻"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/txtView3Yao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:text="三 爻"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/txtView2Yao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:text="二 爻"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/txtView1Yao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:text="初 爻"
                    android:textAppearance="?android:textAppearanceMedium" />

            </LinearLayout>

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/txtViewPaiPan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="开始排卦"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>




